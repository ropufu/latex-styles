\RequirePackage{amsmath}

\newcommand{\MatrixLeft}{[}
\newcommand{\MatrixRight}{]}
%\renewcommand{\vec}[1]{\boldsymbol{#1}}

% ~~ Short-hand notation for matrices ~~
\newcommand{\m}[2][0ex]{%
\left[\begin{matrix} #2 \\ \end{matrix}\right]}
\newcommand{\mm}[3][0ex]{%
\left[\begin{matrix} #2 \\[#1] #3 \\ \end{matrix}\right]}
\newcommand{\mmm}[4][0ex]{%
\left[\begin{matrix} #2 \\[#1] #3 \\[#1] #4 \\ \end{matrix}\right]}
\newcommand{\mmmm}[5][0ex]{%
\left[\begin{matrix} #2 \\[#1] #3 \\[#1] #4 \\[#1] #5 \\ \end{matrix}\right]}


% ~~ Misc ~~
\newcommand{\norm}[1]{\left\lVert#1\right\rVert}
\newcommand{\abs}[1]{\left\vert#1\right\vert}
\newcommand{\slfrac}[3][\big]{#2#1/#3}
\newcommand{\ceiling}[1]{\left\lceil #1 \right\rceil}
\newcommand{\floor}[1]{\left\lfloor #1 \right\rfloor}
\newcommand{\One}{\mathchoice{\rm 1\mskip-4.2mu l}{\rm 1\mskip-4.2mu l}{\rm 1\mskip-4.6mu l}{\rm 1\mskip-5.2mu l}}


